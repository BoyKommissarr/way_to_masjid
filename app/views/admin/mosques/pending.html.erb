<h1>All Pending Mosques</h1>
<table class="table table-light table-bordered" >
  <thead>
    <tr>
      <th>Sr.no</th>
      <th>Name</th>
      <th>Address</th> 
      <th>Status</th>
      <th colspan="2" style = "text-align:center">Manage</th>
    </tr>
  </thead>
  <tbody>
    <%@pending_mosques.each_with_index do |mosque, index|%>
      <tr>
        <td><%=index+1%></td>
        <td><%=mosque.name%></td>
        <td><%=mosque.address%></td>
        <td style = "color:red"><%=mosque.status.capitalize%></td>
        <td><%= link_to "Approve", ""  %></td>
        <td><%= link_to "Reject", "" %> </td>
      </tr>
    <%end%>
  </tbody>
</table>
