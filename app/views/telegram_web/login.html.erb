<div class="min-vh-100 py-5">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-12 col-lg-8">
				<div class="card shadow-lg">
					<div class="card-body p-4 p-md-5">
						<h1 class="text-center mb-4 fw-bold">Masjid Registration</h1>

						<form id="masjidForm">
							<!-- Personal Information Section -->
							<div class="bg-light p-4 rounded-3 mb-4">
									<h2 class="h4 mb-4">Personal Information</h2>
									
									<div class="row g-3">
											<div class="col-md-6">
													<label class="form-label d-flex align-items-center">
															<i class="bi bi-person me-2"></i>
															First Name
													</label>
													<input
															type="text"
															name="firstName"
															class="form-control"
															required
													>
											</div>

											<div class="col-md-6">
													<label class="form-label d-flex align-items-center">
															<i class="bi bi-person me-2"></i>
															Last Name
													</label>
													<input
															type="text"
															name="lastName"
															class="form-control"
															required
													>
											</div>

											<div class="col-md-6">
													<label class="form-label d-flex align-items-center">
															<i class="bi bi-envelope me-2"></i>
															Email
													</label>
													<input
															type="email"
															name="email"
															class="form-control"
															required
													>
											</div>

											<div class="col-md-6">
													<label class="form-label d-flex align-items-center">
															<i class="bi bi-telephone me-2"></i>
															Phone Number
													</label>
													<input
															type="tel"
															name="phoneNumber"
															class="form-control"
															required
													>
											</div>
									</div>
							</div>

							<!-- Masjid Information Section -->
							<div class="bg-light p-4 rounded-3 mb-4">
									<h2 class="h4 mb-4">Masjid Information</h2>
									
									<div class="row g-3">
											<div class="col-12">
													<label class="form-label d-flex align-items-center">
															<i class="bi bi-building me-2"></i>
															Masjid Name
													</label>
													<input
															type="text"
															name="masjidName"
															class="form-control"
															required
													>
											</div>

											<div class="col-12">
													<label class="form-label d-flex align-items-center">
															<i class="bi bi-geo-alt me-2"></i>
															Masjid Address
													</label>
													<input
															type="text"
															name="masjidAddress"
															class="form-control"
															required
													>
											</div>

											<div class="col-12">
													<label class="form-label d-flex align-items-center">
															<i class="bi bi-link-45deg me-2"></i>
															Google Maps Link
													</label>
													<input
															type="url"
															name="googleLink"
															class="form-control"
															placeholder="https://maps.google.com/..."
															required
													>
											</div>
									</div>
							</div>

							<button
									type="submit"
									class="btn btn-success w-100 py-3"
									style="background-color: #16a34a"
							>
									Submit Registration
							</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
