<% if @mosque.new_record? %>
  <h1>Add new masjid for <%= current_user.full_name %></h1>
<% else %>
  <h1>Edit masjid for <%= current_user.full_name %></h1>
<% end %>

<%= form_with(model: @mosque, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :area_id %>
    <%= form.collection_select :area_id, Area.all, :id, :area_name, prompt: "Choose Area" %>
  </div>

  <div class="field">
    <%= form.label :google_link %>
    <%= form.text_field :google_link %>
  </div>

  <!-- Hidden field for user_id -->
  <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
